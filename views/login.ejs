		<main style="margin-top: 10px;">
		<% if (typeof bannermessage !== 'undefined' && bannermessage) { %>
            <div class="alert alert-danger" style="text-align: center; font-size: 17px; font-weight: 800; width: 100%;">
                <strong><%= bannermessage %></strong> 
            </div>
        <% } %>
			<div class="log-in-pop" style=" border-radius:10px;">
				<div class="log-in-pop-left">
					<center>
							<img src="/images/panda_sign.png" style="background-size: contain; height: 90%; width: 90%;">
					</center>
				</div>
				<div class="log-in-pop-right">
					<b style="text-align: center; font-size: 1.9rem; font-weight: 800;">Login</b>
				
					<form class="s12" action="/signin" method="POST">
							<br>
						<div>
							<div class="input-field s12">
